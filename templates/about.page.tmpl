{{template "base" .}}

{{define "content"}}
  <div class="container">
    <div class="row">
        <a href="/">HOME</a>
      <div class="col">
        <h1>
          This is the About page.
        </h1>
        <p>This came from the template: {{index .StringMap "test"}}</p>
        <p>
            {{if ne (index .StringMap "remote_ip") ""}}
                Your IP is {{index .StringMap "remote_ip"}}
            {{else}}
                Please visit the home page.
                <a href="/">HOME</a>
            {{end}}
        </p>
      </div>
    </div>
  </div>
{{end}}